{
  "name": "cursor-rules-management",
  "displayName": "Cursor Rules Management",
  "description": "Share and manage Cursor rules across projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-rules.importRule",
        "title": "Import Cursor Rule"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Cursor Rules Management",
      "properties": {
        "cursorRules.sharedRulesDirectory": {
          "type": "string",
          "default": "~/.cursor-rules",
          "description": "Directory where shared Cursor rules are stored"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "install-extension": "vsce package --allow-missing-repository && cursor --install-extension cursor-rules-management-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
